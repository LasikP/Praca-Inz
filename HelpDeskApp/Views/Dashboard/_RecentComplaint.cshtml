@model HelpDeskApp.Models.DashboardViewModel.DashboardDataViewModel

<hr />

<div class="panel panel-hash">
    <div class="panel-heading"><h4><b>Ostatnie Zlecenia</b></h4></div>
    <div class="panel-body scroll panel-height">
        <table class="CustomBlueTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nazwa</th>
                    <th>Kategoria</th>
                    <th>Przypisane Do</th>
                    <th>Priorytet</th>
                    <th>Status</th>
                    <th>Zgłoszone Przez</th>
                    <th>Data Stworzenia</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model.ComplaintList)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>
                                <a href='#' class='btn btn-link btn-xs' onclick=Details('@item.Id')>@item.Name</a>
                            </td>
                            <td>@item.CategoryName</td>
                            <td>@item.AssignTo</td>
                            <td>@item.Priority</td>
                            <td>@item.Status</td>
                            <td>@item.Complainant</td>
                            <td>@item.CreatedDate.ToString("dd MMMM yyyy")</td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        <br /><br /><br />
    </div>
</div>
