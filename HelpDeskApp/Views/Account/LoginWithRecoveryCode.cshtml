@model HelpDeskApp.Models.AccountViewModels.LoginWithRecoveryCodeViewModel
@{
    ViewData["Title"] = "Weryfikacja kodu odzyskiwania";
}

<h2>@ViewData["Title"]</h2>
<hr />
<p>
    Użytkownik poprosił o zalogowanie się przy użyciu kodu odzyskiwania. Ten login nie zostanie zapamiętany, dopóki nie podasz
    kodu aplikacji uwierzytelniającej podczas logowania lub wyłączenia 2FA i ponownego zalogowania.
</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RecoveryCode"></label>
                <input asp-for="RecoveryCode" class="form-control" autocomplete="off" />
                <span asp-validation-for="RecoveryCode" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Zaloguj się</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}