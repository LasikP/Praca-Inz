@model HelpDeskApp.Models.ComplaintViewModel.ComplaintManageViewModel

<div id="printableArea">
	<partial name="~/Views/DownloadReport/_CompanyBanner.cshtml" />
	<hr />
	<table class="" style="width:100%" border="1">
		<tr><th>Id</th><td>@Model.ComplaintGridViewModel.Id</td></tr>
		<tr><th>Kod</th><td>@Model.ComplaintGridViewModel.Code</td></tr>
		<tr><th>Nazwa</th><td>@Model.ComplaintGridViewModel.Name</td></tr>
		<tr><th>Opis</th><td>@Model.ComplaintGridViewModel.Description</td></tr>
		<tr><th>Kategoria</th><td>@Model.ComplaintGridViewModel.CategoryName</td></tr>
		<tr><th>Priorytet</th><td>@Model.ComplaintGridViewModel.Priority</td></tr>
		<tr><th>Przypisz do</th><td>@Model.ComplaintGridViewModel.AssignTo</td></tr>
		<tr>
			<th style="background-color:rebeccapurple">Stan</th>
			<td>@Model.ComplaintGridViewModel.Status</td>
		</tr>
		<tr><th>Data utworzenia</th><td>@Model.ComplaintGridViewModel.CreatedDate</td></tr>
		<tr><th>Data utworzenia</th><td>@Model.ComplaintGridViewModel.DueDate</td></tr>
		<tr><th>Uwagi</th><td>@Model.ComplaintGridViewModel.Remarks</td></tr>
		<tr><th>Zgloszone przez</th><td>@Model.ComplaintGridViewModel.Complainant</td></tr>
		<tr><th>Data modyfikacji</th><td>@Model.ComplaintGridViewModel.ModifiedDate</td></tr>
		<tr><th>Utworzone przez</th><td>@Model.ComplaintGridViewModel.CreatedBy</td></tr>
		<tr><th>Zmodyfikowane przez</th><td>@Model.ComplaintGridViewModel.ModifiedBy</td></tr>
	</table>

	<br />
	<h4>Historia Komentarzy</h4>
	<hr />
	<table class="" style="width:100%;" border="1">
		<thead>
			<tr>
				<th>Komentarz</th>
				<th>Id Komentarza</th>
				<th>Autor Komentarza</th>
				<th>Data Komentarza</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.CommentList)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Message)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Id)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.CreatedBy)
					</td>
					<td>
						@String.Format("{0:f}", item.CreatedDate)
					</td>
				</tr>
			}
		</tbody>
	</table>

	<br />
	<h4>Dolaczone Zalaczniki</h4>
	<hr />
	<table class="" style="width:100%;" border="1">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nazwa pliku</th>
				<th>Typ tresci</th>
				<th>Dlugosc</th>
				<th>Data</th>
				<th>Dodano przez</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.AttachmentFileList)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Id)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.FileName)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.ContentType)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Length)
					</td>
					<td>
						@String.Format("{0:f}", item.CreatedDate)
					</td>
					<td>
						@String.Format("{0:f}", item.CreatedBy)
					</td>
				</tr>
			}
		</tbody>
	</table>


	<style>
		table th {
			padding-left: 5px;
		}

		table td {
			padding-left: 5px;
		}
	</style>
</div>